{{#if updatePostForm}}
  <h4>Update</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="postTitle">Post Title</label>
          {{input id="postTitle" value=post.postTitle}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input  id="author" value=post.author}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input  id="date" value=post.date}}
        </div>

        <div class="form-group">
          <label for="story">Story</label>
          {{input id="story" value=post.story}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=post.image}}
        </div>

        <button class="btn btn-primary" {{action 'update' post}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-primary" {{action 'updatePostForm'}}>Update</button>
{{/if}}

{{yield}}
