<div class="col-xs-6">
  <li>
    <div class="post-tile">
      <div class="post-title">
        {{post.postTitle}}
      </div>

      <div class="post-image">
        <img src={{post.image}}>
      </div>

      <div class="author-date">
        {{post.author}}
        {{post.date}}
      </div>

      {{post.story}}
    </div>
    <div class="edit-buttons">
      {{update-post post=post update="update"}}
      <br>
      <button class="btn btn-primary"{{action 'delete' post}}>Delete</button>
    </div>
  </li>
</div>
