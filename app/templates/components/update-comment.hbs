{{#if updatePostForm}}
  <h4>Update</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="comment">Comment</label>
          {{input id="comment" value=comment.comment}}
        </div>

          <div class="form-group">
            <label for="username">User Name</label>
            {{input  id="username" value=comment.username}}
          </div>

          <div class="form-group">
            <label for="date">Date</label>
            {{input  id="date" value=post.date}}
          </div>

          <div class="form-group">
            <label for="story">Story</label>
            {{input id="story" value=post.story}}
          </div>

          <div class="form-group">
            <label for="image">Image URL</label>
            {{input value=image id="image" placeholder=post.image}}
          </div>

          <button class="btn btn-primary" {{action 'update' post}}>Save</button>

      </form>
    </div>
{{else}}
<button class="btn btn-primary" {{action 'updateCommentForm'}}>Update</button>
{{/if}}    


{{yield}}
